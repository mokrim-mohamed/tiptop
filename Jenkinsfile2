pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('id_token_prv')
        CLOUDSDK_CORE_PROJECT = 'g2-archi-o23'
    }

    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code source depuis le repository
                git url: 'https://github.com/mokrim-mohamed/tiptop', branch: 'mokrim'
            }
        }

    

        stage('Build') {
            steps {
                script {
                    sh  'mvn clean package -DskipTests'
                }
            }
        }
        stage('fonctionnel test') {
            steps {
                script {
                    sh 'mvn test -P fonctionnel-tests'
                }
                }
            }
        }






    }

    post {
        success {
            echo 'Le pipeline s\'est terminé avec succès.'
            sh 'docker logout'
                sleep(time: 30, unit: 'SECONDS')
             emailext(
                        subject: "Test de Jenkins - Notification",
                        body: "Le pipeline Jenkins a été exécuté avec succès.",
                        to: "mokrimmohamed2016@gmail.com,ouahbi.nachit@gmail.com"
                    )
        }

        failure {
            echo 'Le pipeline a échoué.'
            sh 'docker logout'
             emailext(
                        subject: "Test de Jenkins - Notification",
                        body: "Le pipeline Jenkins a échoué.  Voici l'erreur :\n\n${errorMessage}",
                        to: "mokrimmohamed2016@gmail.com,"
                    )
        }
    }
}
